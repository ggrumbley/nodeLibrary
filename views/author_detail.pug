extends layout

block content

  h1 Author: #{author.name}
  p #{author.lifespan}

  div.details

    h4 Books

    dl
    each book in author_books
      dt
        a(href=book.url) #{book.title}
      dd #{book.summary}

    else
      p This author has no books.

  hr
  div.btn-toolbar
    a(href=author.url+'/update').btn.btn-primary Update Author
    a(href=author.url+'/delete').btn.btn-danger Delete Author
