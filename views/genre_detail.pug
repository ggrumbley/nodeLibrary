extends layout

block content

  h1 Genre: #{genre.name}

  div.details

    h4 Books

    dl
    each book in genre_books
      dt
        a(href=book.url) #{book.title}
      dd #{book.summary}

    else
      p This genre has no books

  hr
  div.btn-toolbar
    a(href=genre.url+'/update').btn.btn-primary Update Genre
    a(href=genre.url+'/delete').btn.btn-danger Delete Genre
